{% extends layout %}

{% block main %}

    <div class="container py-3">

        <div class="page-title">
            <h1 class="title"><i class="fa fa-edit"></i> Cadastrar</h1>
        </div>

        <form class="admpage-form" enctype="multipart/form-data" onsubmit="javascript:return false;">

            <div class="container-fluid py-3">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <div class="form-group">
                            <label>Nome Completo</label>
                            <input name="nome" type="text" required
                                   class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>CPF</label>
                            <input name="cpf" type="text" required class="mask-cpf form-control"/>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Sexo</label>
                            <select name="sexo" required class="form-control">
                                <option value="m">Masculino</option>
                                <option value="f">Feminino</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Data Nascimento</label>
                            <input name="nascimento" type="date" required class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>


            <div class="page-title">
                <h4 class="title">
                    <i class="fa fa-map-marker"></i> Localização
                </h4>
            </div>


            <div class="container-fluid py-3">
                <div class="row">
                    <div class="col-md-3 col-xs-12">
                        <div class="form-group">
                            <label>CEP</label>
                            <input name="cep" type="text" required class="mask-cep form-control"/>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <div class="form-group">
                            <label>Logradouro</label>
                            <input name="logradouro" type="text" class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-xs-12">
                        <div class="form-group">
                            <label>Número</label>
                            <input name="numero" type="text" class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <div class="form-group">
                            <label>Complemento</label>
                            <input name="complemento" type="text" class="form-control"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Bairro</label>
                            <input name="bairro" type="text" class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-3 col-xs-12">
                        <div class="form-group">
                            <label>Estado</label>
                            <select name="estado" required class="form-control">
                                {{ optEstados() }}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-5 col-xs-12">
                        <div class="form-group">
                            <label>Cidade</label>
                            <select name="cidade" required class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="page-title">
                <h4 class="title">
                    <i class="fa fa-phone"></i> Telefones de Contato
                </h4>
            </div>

            <div class="container-fluid py-3">
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Telefone</label>
                            <input name="telefone" type="text" class="mask-telefone form-control"/>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Celular</label>
                            <input name="celular" type="text" class="mask-telefone form-control" required/>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Whatsapp</label>
                            <input name="whatsapp" type="text" class="mask-telefone form-control"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="page-title">
                <h4 class="title">
                    <i class="fa fa-lock"></i> Dados de acesso
                </h4>
            </div>

            <div class="container-fluid py-3">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <div class="form-group">
                            <label>E-mail</label>
                            <input name="email" type="email" placeholder="example@email.com" required
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-6">
                        <div class="form-group">
                            <label>Login/Usuário</label>
                            <input name="login" type="text" placeholder="Seu usuário" pattern="[A-Za-z0-9_]{5,20}"
                                   required
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Senha</label>
                            <input name="senha" type="password" placeholder="Mínimo 5 caracteres"
                                   pattern="[A-Za-z0-9]{5,20}" maxlength="20" class="form-control"/>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="form-group">
                            <label>Confirmar Senha</label>
                            <input name="confirmar-senha" type="password" placeholder="Repita a senha"
                                   pattern="[A-Za-z0-9]{5,20}" maxlength="20" class="form-control"/>
                        </div>
                    </div>
                </div>

                <div class="text-right">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-check"></i> Concluír
                    </button>
                </div>

            </div>

        </form>

    </div>


{% endblock %}

{% block script %}
    <script>
        $('.admpage-form')
            .adminPage({
                alertSuccess: true,
                autoSearch: false,
                autoReset: false,
                reloadSuccess: url(),
            });
    </script>
{% endblock %}